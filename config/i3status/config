general {
    output_format="i3bar"
    colors=true
    interval=5
}

order += "disk /"
order += "disk /home"
order += "wireless wlp58s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "volume master"
order += "load"
order += "tztime local"

wireless wlp53s0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
    format_down = "W: down"
}

